<% if pessoa_signed_in? %>

    <%= flash_mensagem %>

      <% if @pessoa == current_pessoa %>
          <%= render 'pessoa_page', pessoa: @pessoa %>
      <% else %>
          <%= render 'pessoa_perfil', pessoa: @pessoa %>
      <% end %>
<% else %>
    <%= render 'main_page/erro_sem_login' %>
<% end %>